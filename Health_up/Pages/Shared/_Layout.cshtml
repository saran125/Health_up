
@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="description" content="">

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthUP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.1/font/bootstrap-icons.css">
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.ico">
    <!-- Place favicon.ico in the root directory -->
    <!-- ========================= CSS here ========================= -->
    <link rel="stylesheet" href="~/assets/css/bootstrap-5.0.5-alpha.min.css">
    <link rel="stylesheet" href="~/assets/css/LineIcons.2.0.css">
    <link rel="stylesheet" href="~/assets/css/animate.css">
    <link rel="stylesheet" href="~/assets/css/tiny-slider.css">
    <link rel="stylesheet" href="~/assets/css/main.css">

</head>
<body>
    <header>
        <div class="header-wrapper">
            <div class="header-top theme-bg">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="header-top-left text-center text-md-left">
                                <ul>
                                 
                                    
               
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="header-top-right d-none d-md-block">
                                <ul>
                                    <li><a href="#"><i class="lni lni-facebook-filled"></i></a></li>
                                    <li><a href="#"><i class="lni lni-twitter-filled"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="navbar-area">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <nav class="navbar navbar-expand-lg">
                                <a style="width:200px;" class="navbar-brand" href="/">
                                    <img src="/assets/img/logo/healthcare.png" width="50" height="50" alt="Logo"> &nbsp;HealthUP
                                </a>
                                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="toggler-icon"></span>
                                    <span class="toggler-icon"></span>
                                    <span class="toggler-icon"></span>
                                </button>

                                <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent">
                                    <ul id="nav" class="navbar-nav ml-auto">
                                        @{ if (Context.Session.GetString("Role") != null)
                                            {
                                                if (Context.Session.GetString("Role") == "elderly")
                                                {
                                                    <li class="nav-item">
                                                        <a class="page-scroll" asp-page="/elderly/appointment/Retrieve">Home</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="page-scroll" asp-page="/elderly/appointment/Create">See A Doctor</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="page-scroll" asp-page="/elderly/booking/Activity">Activity</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="page-scroll" asp-page="/faq">FAQ</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <div class="dropdown">
                                                            <button class="dropbtn">
                                                                <i class='fas fa-user-alt'></i> @(Context.Session.GetString("Fname"))
                                                                <i class="fa fa-arrow-down"></i>
                                                            </button>

                                                            <div class="dropdown-content">
                                                                <a asp-page="/elderly/Profile">
                                                                    Profile
                                                                    <i class="fas fa-user"></i>
                                                                </a>

                                                                <a asp-page="/Auth/logout">
                                                                    Log Out
                                                                    <i class="fas fa-sign-out-alt"></i>
                                                                </a>

                                                            </div>
                                                        </div>


                                                    </li>
                                                }
                                                if (Context.Session.GetString("Role") == "doctor")
                                                {
                                                    <li class="nav-item">
                                                        <a class="page-scroll" asp-page="/doctor/index">Home</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="page-scroll" asp-page="/doctor/timeslot/Retrieve">My Schedule</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="page-scroll" asp-page="/faq">FAQ</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <div class="dropdown">
                                                            <button class="dropbtn">

                                                                <i class='fas fa-user-alt'></i> @(Context.Session.GetString("Fname"))
                                                                <i class="fa fa-arrow-down"></i>
                                                            </button>

                                                            <div class="dropdown-content">
                                                                <a asp-page="/doctor/profile">
                                                                    Profile
                                                                    <i class="fas fa-user"></i>
                                                                </a>
                                                                <a asp-page="/doctor/report/view">
                                                                    Reports
                                                                    <i class="fas fa-calendar-alt"></i>

                                                                </a>
                                                                <a asp-page="/Auth/logout">
                                                                    Log Out
                                                                    <i class="fas fa-sign-out-alt"></i>
                                                                </a>

                                                            </div>
                                                        </div>

                                                    </li>
                                                }
                                                if (Context.Session.GetString("Role") == "admin")
                                                {
                                                    <li class="nav-item">
                                                        <a class="page-scroll" asp-page="/admin/Index">Home</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="page-scroll" asp-page="/admin/Users/users">Users</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="page-scroll" asp-page="/admin/Activity/View">Current Activities</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="page-scroll" asp-page="/admin/Activity/UpcomingActivity">Upcoming Activities</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="page-scroll" asp-page="/admin/Activity/PastActivity">Past Acitvities</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <div class="dropdown">
                                                            <button class="dropbtn">
                                                                <i class='fas fa-user-alt'></i> @(Context.Session.GetString("Fname"))
                                                                <i class="fa fa-arrow-down"></i>
                                                            </button>

                                                            <div class="dropdown-content">
                                                                <a asp-page="/Auth/Profile">
                                                                    Profile
                                                                    <i class="fas fa-user"></i>
                                                                </a>

                                                                <a asp-page="/Auth/logout">
                                                                    Log Out
                                                                    <i class="fas fa-sign-out-alt"></i>
                                                                </a>

                                                            </div>
                                                        </div>

                                                    </li>
                                                }

                                            } }
                                        @{else
                                            {
                                                <li class="nav-item active">
                                                    <a class="page-scroll" asp-page="/Index">Home</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="page-scroll" href="#services">Service</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="page-scroll" href="#team">Doctor</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="page-scroll" href="#blog">Blog</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="page-scroll" href="#contact">Contact</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="page-scroll" asp-page="/Auth/login">Log In</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="page-scroll" asp-page="/Auth/register">Register</a>
                                                </li>
                                            } }
                                    </ul>
                                </div> <!-- navbar collapse -->
                            </nav> <!-- navbar -->
                        </div>
                    </div> <!-- row -->
                </div> <!-- container -->
            </div> <!-- navbar area -->
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- ========================= footer start ========================= -->
    <!-- ========================= footer end ========================= -->


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- ========================= scroll-top ========================= -->
    <a href="#" class="scroll-top">
        <i class="lni lni-arrow-up"></i>
    </a>

    <!-- ========================= JS here ========================= -->
    <script src="assets/js/bootstrap.bundle-5.0.0.alpha-min.js"></script>
    <script src="assets/js/wow.min.js"></script>
    <script src="assets/js/tiny-slider.js"></script>
    <script src="~/js/home.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
