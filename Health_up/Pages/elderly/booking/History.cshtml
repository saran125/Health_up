@page
@model Health_up.Pages.elderly.booking.HistoryModel
@{
    ViewData["Title"] = "";
}
<style>
    .btn {
        width: 116px;
    }
</style>
<h1>My Booking Activity History</h1>
<br />
<div class="card-deck">
    @{ if (Model.bookingByEmail != null)
        {
            @foreach (var item in Model.bookingByEmail)
            {
                <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                    <div class="card-header">
                        <h3>
                            @item.Date.ToShortDateString()
                        </h3>
                    </div>
                    <div class="card-footer text-center">
                        <a class="btn btn-primary m-1" asp-page="/elderly/appointment/DetailsHistory" asp-route-id="@item.Id">View Details</a>

                    </div>
                </div>




            }
        }
        else
        {
            <h1>You have no history of appointments</h1>
        }

    }





</div>
