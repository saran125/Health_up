    <title>Medical Report</title>
    <link rel="stylesheet" type="text/css" href="~/css/report.css">
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <form runat="server" method="post">
                <span class="login100-form-title">
                    Medical Report
                </span>
                <table>
                    <tr>
                        <td>Namwvwvcvcwcdce<br /></td>
