@page
@model Health_up.Pages.admin.ActivityModel
@using Health_up.Models;
@{
}

<div class="col-md-6 offset-md-3 mt-5">

    <h1>Adding Activity</h1>
    <form accept-charset="UTF-8" method="POST" target="_blank">
        <div class="form-group">
            <label for="name">Activity Name</label>
            <input type="text" name="name" class="form-control" asp-for="myactivity.Activity_name" placeholder="Enter Activity Name" required="required">
        </div>
        <div class="form-group">
            <label for="description" required="required">Activity Description</label>
            <textarea type="text" name="description" required class="form-control" asp-for="myactivity.Activity_description" placeholder="Enter Details of Activity"></textarea>
        </div>
        <div class="form-group">
            <label for="start_date" required="required">Activity Start Date</label>
            <input type="date" name="start_date" re class="form-control" asp-for="myactivity.Activity_start_date">
        </div>
        <div class="form-group">
            <label for="end_date" required="required">Activity End Date</label>
            <input type="date" name="end_date" re class="form-control" asp-for="myactivity.Activity_end_date">
        </div>
        <div class="form-group">
            <label class="radio inline">
                @Html.RadioButton("myactivity.activity_timeslot", "7am to 8.30am") <span>7am to 8.30am</span>
            </label>
            <label class="radio inline">
                @Html.RadioButton("myactivity.activity_timeslot", "9am to 10.30am") <span>9am to 10.30am</span>
            </label>
            <label class="radio inline">
                @Html.RadioButton("myactivity.activity_timeslot", "11am to 12.30pm") <span>11am to 12.30pm</span>
            </label>
            <label class="radio inline">
                @Html.RadioButton("myactivity.activity_timeslot", "1pm to 2.30pm") <span>1pm to 2.30pm</span>
            </label>
            <label class="radio inline">
                @Html.RadioButton("myactivity.activity_timeslot", "3pm to 4.30pm") <span>3pm to 4.30pm</span>
            </label>
            <label class="radio inline">
                @Html.RadioButton("myactivity.activity_timeslot", "5pm to 6.30pm") <span>5pm to 6.30pm</span>
            </label>
            <label class="radio inline">
                @Html.RadioButton("myactivity.activity_timeslot", "7pm to 8.30am") <span>7pm to 8.30pm</span>
            </label>
        </div>

        <label for="price" required="required">Price </label>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>

            <input type="number" name="price" re class="form-control" asp-for="myactivity.Activity_price">
        </div>
        <hr>
        <div class="form-group mt-3">
            <label class="mr-2">Upload The Activity Image:</label>
            <input type="file" name="file" asp-for="myactivity.Activity_photo">
        </div>
        <hr>
        <button type="submit" class="btn btn-success float-right">Submit</button>
        <br />
        <br />
        <br/>
    </form>
</div>

