@page

@model Health_up.Pages.admin.ActivityModel
@using Health_up.Models;
@{ }
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
<div class="col-md-6 offset-md-3 mt-5">

    <h1>Adding Activity</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form accept-charset="UTF-8" enctype="multipart/form-data" method="POST">
        <div class="form-group">
            <label for="name">Activity Name</label>
            <input type="text" class="form-control" asp-for="Myactivity.Activity_name" placeholder="Enter Activity Name" required="required">
        </div>
        <div class="form-group">
            <label for="description" required="required">Activity Description</label>
            <input type="text" required class="form-control" asp-for="Myactivity.Activity_description" placeholder="Enter Details of Activity">
        </div>
        <div class="form-group">
            <label for="start_date" required="required">Activity Start Date</label>
            <input asp-for="Myactivity.Activity_start_date" class="form-control" id="datepicker" value="" placeholder="dd/mm/yyyy" />
            
        </div>
        <div class="form-group">
            <label for="end_date" required="required">Activity End Date</label>
            <input class="form-control" id="datepicker1" asp-for="Myactivity.Activity_end_date">
        </div>
        <div class="form-group">
            <label for="end_date" required="required">Timeslot</label>
            <select class="form-control" asp-for="Myactivity.Activity_timeslot">
                <option class="hidden" selected disabled>--Select timeslot--</option>
                <option value="07:00am - 08:30am">07:00am - 08:30am</option>
                <option value="09:00am - 10:30am">09:00am - 10:30am</option>
                <option value="11:00am - 12:30pm">11:00am - 12:30pm</option>
                <option value="01:00pm - 02:30pm">01:00pm - 02:30pm</option>
                <option value="03:00pm - 04:30pm">03:00pm - 04:30pm</option>
                <option value="05:00pm - 06:30pm">05:00pm - 06:30pm</option>
                <option value="07:00pm - 08:30pm">07:00pm - 08:30pm</option>
            </select>
        </div>

        <label for="price" required="required">Price </label>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            <input type="number" re class="form-control" asp-for="Myactivity.Activity_price">
        </div>
        <div class="form-group">
            <label for="end_date" required="required">Activity Location</label>
            <input type="text" re class="form-control" asp-for="Myactivity.location">
        </div>
        <hr>
        <div class="form-group mt-3">
            <label class="mr-2">Upload The Activity Image:</label>
            <input type="file" asp-for="Image" >
        </div>
        <hr>
        <button type="submit" class="btn btn-success float-right">Submit</button>
        <br />
        <br />
        <br />
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script language="javascript">
        var today = new Date();
        var dd = String(today.getDate()).padStart(2, '0');
        var mm = String(today.getMonth() + 1).padStart(2, '0');
        var yyyy = today.getFullYear();

        today = yyyy + '-' + mm + '-' + dd;
        $('#datepicker').attr('min', today);
        $('#datepicker1').attr('min', today);
    </script>

   
}

